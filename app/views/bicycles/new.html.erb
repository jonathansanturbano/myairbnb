<%= simple_form_for @bicycle do |f| %>
  <%= f.input_field :model, placeholder: "Your bike model" %>
  <%= f.input_field :price_per_day, placeholder: "Your daily price" %>
  <%= f.input :start_date, placeholder: "Your daily price", input_html: {class: "datepicker"} %>
  <%= f.input :end_date, placeholder: "Your daily price", input_html: {class: "datepicker"} %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
<%= f.submit %>
<% end %>
